<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mryang.funnyisland.Activity.product.ProductBallActivity">


    <include layout="@layout/item_head"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/product_recommend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dots"
            android:gravity="right"
            android:text="推荐"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/product_collection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dots"
            android:gravity="center"
            android:text="收藏"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/product_control"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dots"
            android:gravity="left"
            android:text="控制"
            android:textSize="15sp"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/product_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>


</LinearLayout>
