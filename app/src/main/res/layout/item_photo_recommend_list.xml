<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7.5dp"
        app:cardElevation="7.5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recommend_photo_mm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/recommend_photo_title"
                android:layout_width="match_parent"
                android:lines="1"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="TGOD推女神28刊"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <RelativeLayout
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/recommend_photo_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxEms="20"
                    android:ellipsize="end"
                    android:lines="1"
                    android:layout_toLeftOf="@+id/recommend_photo_love"
                    android:text="超级女神超清写真超清私房照..."
                    android:textColor="@color/text_hui"
                    android:textSize="11sp"/>

                <ImageView
                    android:id="@+id/recommend_photo_love"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/recommend_photo_zan"
                    android:layout_marginRight="7dp"
                    android:src="@drawable/aixin"/>
                <TextView
                    android:id="@+id/recommend_photo_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="999"
                    android:textColor="#f00"/>
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>